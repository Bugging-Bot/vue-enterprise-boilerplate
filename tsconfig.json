{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true, // Enables JSON imports
    "esModuleInterop": true, // Allows default imports
    "moduleResolution": "node", // Makes path and JSON resolution work
    "target": "ES2020",
    "module": "commonjs",
    "strict": true
  },
  "include": ["src/**/*", "test.ts"],
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}
